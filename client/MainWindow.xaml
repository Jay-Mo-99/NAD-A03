        <Button Content="Connect" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="625,53,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.313,0.643" Width="62"/>
        <Button Content="Disconnect" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="704,52,0,0" VerticalAlignment="Top"/>
        <Button Content="Send" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="625,104,0,0" VerticalAlignment="Top" Width="141" RenderTransformOrigin="0.144,-0.008"/>

    </Grid>
