        <TextBox HorizontalAlignment="Left" Margin="93,51,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="255" RenderTransformOrigin="-0.158,-0.577" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="451,52,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.158,-0.577" Grid.ColumnSpan="2"/>
